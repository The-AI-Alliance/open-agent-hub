  <ul class="nav__items">
    {% for navname in include.nav %}
      {% assign navigation = site.data.navigation[navname] %}
      {% for nav in navigation %}
        <li>
          {% if nav.icon_class %}
            <i class="fab fa-fw {{ nav.icon_class }}" aria-hidden="true"></i>
          {% endif %}
          {% if nav.url %}
            <a
              href="{{ nav.url | relative_url }}"
              {% if nav.description %} title="{{ nav.description }}"{% endif %}
              {% if nav.target %} target="{{ nav.target }}"{% endif %}
              {% if nav.url == page.url %} class="active"{% endif %}
            ><span class="nav__sub-title">{{ nav.title }}</span></a>
          {% else %}
            <span class="nav__sub-title">{{ nav.title }}</span>
          {% endif %}

          {% if nav.children != null %}
          <ul>
            {% for child in nav.children %}
              <li>
                {% if child.icon_class %}
                  <i class="fab fa-fw {{ child.icon_class }}" aria-hidden="true"></i>
                {% endif %}
                {% if child.url %}
                  <a
                    href="{{ child.url | relative_url }}"
                    {% if child.description %} title="{{ child.description }}"{% endif %}
                    {% if child.target %} target="{{ child.target }}"{% endif %}
                    {% if child.url == page.url %} class="active"{% endif %}
                  ><span class="nav__sub-title">{{ child.title }}</span></a>
                {% else %}
                  <span class="nav__sub-title">{{ nav.title }}</span>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
      {% endfor %}
    {% endfor %}
  </ul>
</nav>
